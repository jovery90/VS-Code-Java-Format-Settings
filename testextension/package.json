{
	"name": "vscode-user-format-commands",
	"displayName": "Format User Settings Extension",
	"description": "Change global user format settings via VS Code commands",
	"version": "1.0.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jovery90/Disable-Formatting-VSC-Extension"
	},
	"publisher": "jovery90",
	"author": "Jon Overy",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.enable",
		"onCommand:extension.disable"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.enable",
				"title": "Formatting: ENABLE"
			},
			{
				"command": "extension.disable",
				"title": "Formatting:  DISABLE"
			}
		]
	},
	"capabilities": {
		"documentFormattingProvider": "true"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}